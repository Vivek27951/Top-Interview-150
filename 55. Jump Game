class Solution {

private:
    bool helper(vector<int>& nums,int idx,vector<int> &dp){
        if(idx==nums.size()-1)
            return true;
        if (dp[idx] != -1) 
            return dp[idx];
        int steps = nums[idx];
        for(int i=1;i<=steps;i++){
            if(idx+i<nums.size() && helper(nums,idx+i,dp))
                return dp[idx] = true;
        }
        return dp[idx] = false;
    }

public:
    bool canJump(vector<int>& nums) {
        vector<int> dp(nums.size(), -1);
        return helper(nums,0,dp);
    }
};
