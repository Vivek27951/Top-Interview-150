class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int n = prices.size();
        int mini = INT_MAX;
        int maxi = INT_MIN;
        int profit = 0;
        for(int i=0;i<n;i++){
            if(prices[i]<mini){
                mini = prices[i];
                maxi = prices[i];
            }else if(prices[i] > maxi){
                maxi = prices[i];
                profit = max(profit,maxi-mini);
            }
        }
        return profit;
    }
};
